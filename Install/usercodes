textos_fun () {
id="$1"
[[ -e /tmp/txt ]] && {
rm /tmp/txt && touch /tmp/txt
} || touch /tmp/txt
echo "txt[1]='$(fun_trans ${id} "CREAR NUEVO USUARIO")'" >> /tmp/txt &
echo "txt[2]='$(fun_trans ${id} "ELIMINAR USUARIO")'" >> /tmp/txt &
echo "txt[3]='$(fun_trans ${id} "EDITAR USUARIO")'" >> /tmp/txt &
echo "txt[4]='$(fun_trans ${id} "DETALLES DE TODOS LOS USUARIOS")'" >> /tmp/txt &
echo "txt[5]='$(fun_trans ${id} "MONITORIAR USUARIOS CONECTADOS")'" >> /tmp/txt &
echo "txt[6]='$(fun_trans ${id} "ELIMINAR USUARIOS VENCIDOS")'" >> /tmp/txt &
echo "txt[7]='$(fun_trans ${id} "MENU GERENCIAMENTO DE USUARIOS")'" >> /tmp/txt &
echo "txt[8]='$(fun_trans ${id} "Selecione una Opcion")'" >> /tmp/txt &
echo "txt[9]='$(fun_trans ${id} "BACKUP USUARIOS")'" >> /tmp/txt &
echo "txt[10]='$(fun_trans ${id} "VERIFICACIONES")'" >> /tmp/txt &
echo "txt[11]='$(fun_trans ${id} "VOLVER")'" >> /tmp/txt &
echo "txt[12]='$(fun_trans ${id} "BANNER SSH")'" >> /tmp/txt &
echo "txt[13]='$(fun_trans ${id} "RENOVAR USUARIO")'" >> /tmp/txt &
echo "txt[14]='$(fun_trans ${id} "AGREGAR BANNER MANUAL NANO")'" >> /tmp/txt &
echo "txt[15]='$(fun_trans ${id} "ELIMINAR TODOS LOS USUARIOS")'" >> /tmp/txt &
echo "txt[16]='$(fun_trans ${id} "LIMPIAR REGISTRO LIMITADOR")'" >> /tmp/txt &
echo "txt[17]='$(fun_trans ${id} "BLOQUEAR O DESBLOQUEAR USUARIOS")'" >> /tmp/txt &
echo "txt[18]='$(fun_trans ${id} "VER REGISTRO DEL LIMITADOR")'" >> /tmp/txt &
while [[ ! -e /tmp/txt || $(cat /tmp/txt|wc -l) -lt "18"  ]]; do
continue
done
source /tmp/txt && rm /tmp/txt
}
